<h1>Lists#show</h1>
<%= @list.name %>

<ul>
  <% @bookmarks.each do |bookmark| %>
    <li>
    <%= bookmark.comment %>
    <%= bookmark.movie.title %>
    <%= link_to "Destroy", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Delete ?" } %>
    </li>
  <% end %>
</ul>


<%= link_to "Add Bookmark", new_list_bookmark_path(@list) %>
