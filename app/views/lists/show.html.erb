<div class="container">

<div class="d-flex justify-content-between">
  <h1><%= @list.name %></h1>

  <p><%= link_to "Add Bookmark", new_list_bookmark_path(@list), class: "btn btn-outline-primary mt-3 rounded" %></p>
</div>

      <p><%= link_to 'Back', lists_path %></p>

      <div class="d-flex">
          <% @bookmarks.each do |bookmark| %>
              <div class="card ms-5" style="width: 14rem;">
                  <img class="card-img-top" src="<%= bookmark.movie.poster_url %>" alt="Card image cap">
                  <div class="card-body">
                      <h5 class="card-title"><%= bookmark.movie.title %></h5>
                      <p class="card-text"><%= bookmark.comment %></p>
                      <p><%= link_to "Supprimer", list_bookmark_path(@list, bookmark), data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de vouloir supprimer cette tâche ?" }, class: "btn btn-outline-primary rounded" %></p>
                  </div>
              </div>
          <% end %>
      </div>

      <br>


</div>
